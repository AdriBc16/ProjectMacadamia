<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fondo_inicio" />


    <View
        style="@style/GreenRoundedView"
        android:layout_marginTop="300dp" />

    <View
        style="@style/GreenRoundedView"
        android:layout_marginTop="360dp" />

    <View
        style="@style/GreenRoundedView"
        android:layout_marginTop="420dp" />

    <View
        style="@style/GreenRoundedView"
        android:layout_marginTop="480dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily=""
            android:text="@string/profile"
            android:textColor="@color/medium_green"
            android:textSize="30sp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/icono"
            android:layout_width="222dp"
            android:layout_height="165dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/profile" />


        <EditText
            android:id="@+id/user"
            style="@style/MyEditTextStyle"
            android:layout_marginTop="10dp"
            android:hint="@string/user" />

        <EditText
            android:id="@+id/email"
            style="@style/MyEditTextStyle"
            android:layout_marginTop="12dp"
            android:hint="@string/email" />

        <EditText
            android:id="@+id/phone"
            style="@style/MyEditTextStyle"
            android:layout_marginTop="12dp"
            android:hint="@string/phone_number" />

        <EditText
            android:id="@+id/adress"
            style="@style/MyEditTextStyle"
            android:layout_marginTop="12dp"
            android:hint="@string/adress" />

        <Button
            android:id="@+id/button"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:backgroundTint="@color/green_overlay"
            android:text="@string/myorders"
            android:textSize="18sp"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:background="@drawable/views" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <ImageButton

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:contentDescription="@string/home"
            android:scaleType="fitCenter"
            android:src="@drawable/casita" />

        <ImageButton
            android:id="@+id/carrito"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:contentDescription="@string/shoppingCart"
            android:scaleType="fitCenter"
            android:src="@drawable/carrito" />

        <ImageButton
            android:id="@+id/userProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:contentDescription="@string/profileU"
            android:scaleType="fitCenter"
            android:src="@drawable/persona" />

    </LinearLayout>

</FrameLayout>