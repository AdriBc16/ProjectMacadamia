<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fondo_inicio" />

    <!-- Decoraciones verdes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingStart="35dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <View style="@style/GreenRoundedView" android:layout_marginTop="238dp" />
            <View style="@style/GreenRoundedView" android:layout_marginTop="20dp" />
            <View style="@style/GreenRoundedView" android:layout_marginTop="20dp" />
            <View style="@style/GreenRoundedView" android:layout_marginTop="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <View style="@style/GreenRoundedView" android:layout_marginTop="238dp" />
            <View style="@style/GreenRoundedView" android:layout_marginTop="20dp" />
            <View style="@style/GreenRoundedView" android:layout_marginTop="20dp" />
            <View style="@style/GreenRoundedView" android:layout_marginTop="20dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="45dp"
        android:paddingHorizontal="20dp">

        <!-- Logo y título -->
        <ImageView
            android:id="@+id/icono"
            android:layout_width="222dp"
            android:layout_height="165dp"
            android:layout_gravity="top|center"
            app:srcCompat="@drawable/icono_final2" />

        <TextView
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/create_account"
            android:textColor="@color/medium_green"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Formulario en dos columnas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Columna izquierda -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="15dp">

                <EditText
                    android:id="@+id/user"
                    style="@style/MyEditTextStyle"
                    android:layout_marginTop="30dp"
                    android:hint="@string/user"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/nombre"
                    style="@style/MyEditTextStyle"
                    android:layout_marginTop="12dp"
                    android:hint="Nombre"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/phone_number"
                    style="@style/MyEditTextStyle"
                    android:layout_marginTop="12dp"
                    android:digits="0123456789"
                    android:hint="@string/phone_number"
                    android:inputType="number|phone"
                    android:maxLength="8" />

                <Spinner
                    android:id="@+id/spinner"
                    style="@style/MyEditTextStyle"
                    android:layout_marginTop="10dp"
                    android:entries="@array/categorias"
                    android:overlapAnchor="false"/>
            </LinearLayout>

            <!-- Columna derecha -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="20dp">

                <EditText
                    android:id="@+id/password"
                    style="@style/MyEditTextStyle"
                    android:layout_marginTop="30dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    app:helperText="Mínimo 8 caracteres con 1 mayúscula y 1 carácter especial" />


                <EditText
                    android:id="@+id/apellido"
                    style="@style/MyEditTextStyle"
                    android:layout_marginTop="12dp"
                    android:hint="Apellido"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/email"
                    style="@style/MyEditTextStyle"
                    android:layout_marginTop="12dp"
                    android:hint="@string/email"
                    android:scaleType="centerCrop"
                    android:inputType="textEmailAddress" />


                <EditText
                    android:id="@+id/address"
                    style="@style/MyEditTextStyle"
                    android:layout_marginTop="12dp"
                    android:hint="@string/adress"
                    android:inputType="text" />
            </LinearLayout>
        </LinearLayout>

        <!-- Elementos debajo del formulario -->

        <Button
            android:id="@+id/button_SignIn"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/medium_green"
            android:text="@string/signin"
            android:textSize="18sp"
            app:cornerRadius="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/donthaveaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/button_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:padding="12dp"
                android:text="@string/login"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>