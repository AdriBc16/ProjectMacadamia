<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <!-- Style for light green button -->
    <style name="LightGreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/light_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="elevation">0dp</item>
        <item name="alpha">0.5</item>
    </style>

    <!-- Style for dark green button -->
    <style name="DarkGreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Style for Google button -->
    <style name="GoogleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/gray</item>
        <item name="strokeColor">@color/dark_green</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Rounded background view -->
    <style name="GreenRoundedView">
        <item name="android:layout_width">222dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/views</item>
    </style>

    <!-- Style for EditText -->
    <style name="MyEditTextStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="LightGreenButtonMenu" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="alpha">0.5</item>
    </style>

    <style name="Barra">
        <item name="android:elevation" ns1:ignore="NewApi">@dimen/design_appbar_elevation</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="subtitleTextColor">@color/material_on_primary_emphasis_medium</item>

        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Toolbar.Popup.Primary</item>

        <item name="itemIconSize">30sp</item>
    </style>

    <style name="ShapeAppearance.App.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Style for dark green button -->
    <style name="bottonPrice" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ErrorEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/red</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="ErrorEditTextStyle">
        <item name="android:textColorHint">@color/red</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="ValidEditTextStyle">
        <item name="android:textColorHint">@color/success_green</item>
        <item name="android:backgroundTint">@color/success_green</item>
    </style>
</resources>